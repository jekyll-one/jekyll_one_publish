media_folder:       assets/images                                               # Media files will be stored in the repo
# publish_mode:     editorial_workflow

backend:
  name:             github                                                      # git-gateway
  repo:             jekyll-one/starter-netlify-cms                              # Path to your GitHub repository


collections:

  - label:          Site Configuration
    name:           j1_site_config                                              # Used in routes, e.g., /admin/collections/blog 
    files:

      - label:      Jekyll Configuration
        name:       site_config_jekyll
        file:       _config.yml
        fields:     [
                      { label: enabled, name: enabled, widget: boolean },
                      { label: active_color, name: active_color, widget: string },
                      { label: background_color, name: background_color, widget: string },
                      { label: icon, name: icon, widget: string }
                    ]

      - label:      J1 Site Configuration
        name:       site_config_j1
        file:       _data/j1_config.yml
        fields:     [
                      { label: enabled, name: enabled, widget: boolean },
                      { label: active_color, name: active_color, widget: string },
                      { label: background_color, name: background_color, widget: string },
                      { label: icon, name: icon, widget: string }
                    ]

  - label:          Module Configuration
    name:           module_config_back2top                                      # Used in routes, e.g., /admin/collections/blog   
    files:

      - label:      Back2Top
        name:       config_back2top
        file:       _test/j1_back2top.yml
        fields:     [
                      { label: enabled, name: enabled, widget: boolean },
                      { label: active_color, name: active_color, widget: string },
                      { label: background_color, name: background_color, widget: string },
                      { label: icon, name: icon, widget: string }
                    ]

      - label:      Schnurtz
        name:       config_schnurtz
        file:       _test/j1_schnurtz.yml
        fields:     [
                      { label: enabled, name: enabled, widget: boolean },
                      { label: active_color, name: active_color, widget: string },
                      { label: background_color, name: background_color, widget: string },
                      { label: icon, name: icon, widget: string }
                      ]


  - label:            Featured Posts                                            # Used in the UI
    name:             featured_posts                                            # Used in routes, e.g., /admin/collections/blog   
    folder:           collections/posts/public/featured/_posts                  # The path to the folder where the documents are stored
    create:           true                                                      # Allow users to create new documents in this collection
    slug:             "{{year}}-{{month}}-{{day}}-{{slug}}"                     # Filename template, e.g., YYYY-MM-DD-title.adoc
    editor:
      preview:        false
    fields:           [                                                         # The fields for each document, usually in front matter
                        { label: "Layout", name: "layout", widget: "hidden", default: "post" },
                        { label: "Title", name: "title", widget: "string" },
                        { label: "Publish Date", name: "date", widget: "datetime" },
                        { label: "Body", name: "body", widget: "markdown" }
                      ]                                                 
  





